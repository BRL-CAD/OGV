{
  "name": "ogv",
  "version": "1.0.0",
  "description": "Online Geometry Viewer",
  "dependencies": {
    "bcrypt": "^0.8.7"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "eslint": "^3.4.0",
    "eslint-plugin-react": "^6.2.0",
    "eslint-config-airbnb": "^11.0.0",
    "eslint-import-resolver-meteor": "^0.3.3",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-jsx-a11y": "^2.2.1",
    "eslint-plugin-meteor": "^4.0.0"
  },
  "scripts": {
    "start": "meteor",
    "lint": "eslint .",
    "test": "eslint ."
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "allowImportExportEverywhere": true,
      "ecmaVersion": 6
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended"
    ],
    "settings": {
      "import/resolver": "meteor"
    },
    "env": {
      "meteor": true,
      "node": true,
      "browser": true
    },
    "rules": {
      "react/require-extension": "off",
      "semi": [
        2,
        "never"
      ],
      "meteor/no-session": [
        0
      ],
      "meteor/audit-argument-checks": 0,
      "meteor/eventmap-params": 0,
      "indent": [
        2,
        4
      ],
      "no-underscore-dangle": 0,
      "no-undef": 0,
      "func-names": 0,
      "array-callback-return": 0,
      "no-param-reassign": 0,
      "no-console": 0,
      "no-alert": 0,
      "one-var": 0,
      "no-use-before-define": [
        0,
        "nofunc"
      ],
      "consistent-return": 0,
      "no-restricted-syntax": 0,
      "max-len": 0,
      "guard-for-in": 0,
      "no-loop-func": 0,
      "meteor/no-template-lifecycle-assignments": 0,
      "global-require": 0
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BRL-CAD/OGV-meteor.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/BRL-CAD/OGV-meteor/issues"
  },
  "homepage": "https://github.com/BRL-CAD/OGV-meteor#readme"
}
